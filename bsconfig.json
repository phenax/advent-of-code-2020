{
  "$schema": "https://raw.githubusercontent.com/rescript-lang/rescript-compiler/master/docs/docson/build-schema.json",
  "name": "adventofcode",
  "version": "0.0.1",
  "sources": [
    {
      "dir": "src",
      "subdirs": true
    }
  ],
  "package-specs": {
    "module": "commonjs",
    "in-source": true
  },
  "bsc-flags": [ "-bs-super-errors -no-alias-deps", "-color", "always"],
  "suffix": ".bs.js",
  "bs-dependencies": ["reason-nodejs"],
  "warnings": {
    "error" : "+101"
  }
}
